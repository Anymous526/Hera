<?xml version="1.0" encoding="UTF-8"?>
<ehcache>
	
	<diskStore path="java.io.tmpdir/hibernate/rpms" />
	<defaultCache maxElementsInMemory="2000"  eternal="false" timeToIdleSeconds="300"
		timeToLiveSeconds="300" overflowToDisk="true" diskPersistent="false"
		diskExpiryThreadIntervalSeconds="120"  memoryStoreEvictionPolicy="LRU" />
		
	<cache name="org.hibernate.cache.StandardQueryCache"
		maxElementsInMemory="2000" eternal="false" timeToIdleSeconds="3600"
		timeToLiveSeconds="7200" overflowToDisk="true" />
		
	<cache name="org.hibernate.cache.UpdateTimestampsCache"
		maxElementsInMemory="2000" eternal="false" timeToIdleSeconds="3600"
		timeToLiveSeconds="7200" overflowToDisk="true" />
		
	<cache name="response-cache"
		maxElementsInMemory="2000" eternal="false" timeToIdleSeconds="1800"
		timeToLiveSeconds="1800" overflowToDisk="true" />
</ehcache>
 